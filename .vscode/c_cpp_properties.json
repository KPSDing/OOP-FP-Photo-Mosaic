{
    "configurations": [
        {
            "name": "MinGW",
            "intelliSenseMode": "linux-gcc-x64", // 在沒有使用 clangd 的狀況下，會使用 C/C++ 延伸模組的 autocomplete。如果 autocomplete 不能正常運作的話 (工作站有時候會遇到這種狀況)，應該是這個設定與系統的 gcc 沒有 match 到。
            // "compilerPath": "C:/tool/mingw64/bin/gcc.exe",
            "compilerPath": "/usr/bin/gcc",  // compiler 路徑，可能隨系統改變，需要自己更改
            "includePath": [
                "${workspaceFolder}"
            ],
            "defines": [],
            "browse": {
                "path": [
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "cStandard": "c11",
            "cppStandard": "c++14"
        }
    ],
    "version": 4
}